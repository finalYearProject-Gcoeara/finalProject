{
  "manifest_version": 3,
  "name": "Flipkart AI Chatbot",
  "version": "1.0",
  "description": "AI assistant for product pages on Flipkart.",
  "content_scripts": [
    {
      "matches": ["*://www.flipkart.com/*"],
      "js": ["frontend/src/js/content.js"],
      "css": ["frontend/src/styles/popup.css"]
    }
  ],
  "background": {
    "service_worker": "frontend/src/js/background.js"
  },
  "action": {
    "default_popup": "frontend/src/html/popup.html",
    "default_icon": "frontend/static/images/icon.png"
  },
  "permissions": ["activeTab", "storage"],
  "icons": {
    "48": "frontend/static/images/icon.png",
    "128": "frontend/static/images/icon.png"
  }
}